<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/caidao_app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/caidao_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/caidaoColorAppbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextColor="@color/caidaoColorAppBarSubtitle"
        app:titleTextColor="@color/caidaoColorAppBarTitle" />
</android.support.design.widget.AppBarLayout>