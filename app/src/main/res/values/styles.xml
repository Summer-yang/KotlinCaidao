<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--Displayed most frequently across your app.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorOnPrimary">@color/colorOnPrimary</item>-->
        <!--<item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>-->

        <item name="colorSecondary">@color/colorSecondary</item>
        <!--<item name="colorOnSecondary">@color/colorOnSecondary</item>-->
        <!--<item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>-->

        <!--<item name="colorBackground">@color/colorBackground</item>-->
        <!--<item name="colorOnBackground">@color/colorOnBackground</item>-->

        <item name="colorError">@color/colorError</item>
        <!--<item name="colorOnError">@color/colorOnError</item>-->

        <!--<item name="colorSurface">@color/colorSurface</item>-->
        <!--<item name="colorOnSurface">@color/colorOnSurface</item>-->

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <!--透明Activity从底部弹出,从底部退出动画-->
    <style name="AppTheme.Translucent.No.Anim" parent="AppTheme.Translucent">
        <item name="android:windowAnimationStyle">@style/AnimFromBottomToBottom</item>
    </style>

    <!--当我们从 A1 启动 A2 时，A1 从屏幕上消失，这个动画叫做 android:activityOpenExitAnimation-->
    <!--当我们从 A1 启动 A2 时，A2 出现在屏幕上，这个动画叫做 android:activityOpenEnterAnimation-->
    <!--当我们从 A2 退出回到 A1 时，A2 从屏幕上消失，这个叫做 android:activityCloseExitAnimation-->
    <!--当我们从 A2 退出回到 A1 时，A1 出现在屏幕上，这个叫做 android:activityCloseEnterAnimation-->
    <style name="AnimFromBottomToBottom">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

</resources>
